@model IEnumerable<FHIR_Demo.Models.MedicationAdministrationViewModel>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
else
{
    @*<pre class="json-card"></pre>*@
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </p>
    <div class="table-responsive">
        <table class="table table-hover text-center align-middle align-content-center">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.status)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.medicationReference)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.medicationCodeableConcept)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.subject)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.effectivePeriod_start)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.effectivePeriod_end)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.request)
                    </th>
                    <th class="text-center align-middle">
                        @Html.DisplayNameFor(model => model.dosage)
                    </th>
                    <th class="text-center align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.medicationReference)
                        </td>
                        <td class="text-center align-middle">
                            @if (item.medicationCodeableConcept != null)
                            {
                                @:Code：@Html.DisplayFor(modelItem => item.medicationCodeableConcept.Code)<br>
                                @:Name：@Html.DisplayFor(modelItem => item.medicationCodeableConcept.Display)
                            }
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.subject)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.effectivePeriod_start)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.effectivePeriod_end)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.request)
                        </td>
                        <td class="text-center align-middle">
                            <table class="table table-hover text-center align-middle align-content-center">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="text-center align-middle">@Html.DisplayNameFor(model => model.dosage.Text)</th>
                                        <th class="text-center align-middle">@Html.DisplayNameFor(model => model.dosage.Dose)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center align-middle">@item.dosage.Text</td>
                                        <td class="text-center align-middle">@item.dosage.Dose.Value @item.dosage.Dose.Unit</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                        <td class="text-center align-middle">
                            @*@Html.ActionLink("Update", "Update", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })*@
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                            @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}