@model FHIR_Demo.Models.PatientViewModel
@using FHIR_Demo.Models;

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h5>Update Patient</h5>
                <hr>
                <div class="row">
                    <div class="col-md-12">
