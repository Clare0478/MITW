@model IEnumerable<FHIR_Demo.Models.EECModels>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
else
{
    @*<pre class="json-card"></pre>*@
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </p>

    <div class="table-responsive">
        <table class="table table-hover text-center align-middle align-content-center">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center align-middle" style="width:5%">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="text-center align-middle" style="width:5%">
                        @Html.DisplayNameFor(model => model.Meta)
                    </th>
                    <th class="text-center align-middle" style="width:5%">
                        @Html.DisplayNameFor(model => model.identifier)
                    </th>
                    <th class="text-center align-middle" style="width:5%">
                        @Html.DisplayNameFor(model => model.type)
                    </th>
                    <th class="text-center align-middle" style="width:10%">
                        @Html.DisplayNameFor(model => model.entry[0].Resource.eec_icresourcedata.com_title)
                    </th>
                    <th class="text-center align-middle" style="width:10%">
                        @Html.DisplayNameFor(model => model.timestamp)
                    </th>
                    <th class="text-center align-middle" style="width:5%">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Meta)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.identifier.code_code)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        @{
                            bool allComTitleNull = true;
                        }
                        @for (int i = 0; i < item.entry.Count(); i++)
                        {
                            if (item.entry[i].Resource.eec_icresourcedata?.com_title != null)
                            {
                                allComTitleNull = false;
                                <th class="text-center align-middle" style="width:10%">
                                    @Html.DisplayFor(model => item.entry[i].Resource.eec_icresourcedata.com_title)
                                </th>
                            }
                        }
                        @if (allComTitleNull)
                        {
                            <th class="text-center align-middle" style="width:10%">
                            </th>
                        }
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.timestamp)
                        </td>
                        <td class="text-center align-middle">
                            @*@Html.ActionLink("Update", "Update", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })*@
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                            @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
